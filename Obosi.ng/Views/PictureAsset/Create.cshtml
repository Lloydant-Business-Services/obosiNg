@model Obosi.ng.Presentation.ViewModels.MediaViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Picture Assets</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Caption:</label>
                <input asp-for="Picture_Asset.Caption" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Unit:</label>
              
                <select asp-for="Picture_Asset.UnitId" class="form-select">
                    <option value="">Select</option>
                    @foreach (var item in Model.Units)
                    {
                        <option value="@item.Id">@item.Name (@item.Unit_Type.Name)</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="row">
       
        <div class="col-md-6">
            <div class="form-group">
                <label for="BackgroundImageUrl">Image:</label>
                <input asp-for="Image" class="form-control" type="file" />
            </div>
        </div>
    </div>
   


    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script src="//cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('#PassageQuestion');
    });

</script>
