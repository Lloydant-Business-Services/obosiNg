@model Obosi.ng.Presentation.ViewModels.AboutViewModel

@{
    ViewData["Title"] = "Edit About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit About</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="About.Id" />
    <div class="form-group">
        <label asp-for="About.Title">Title:</label>
        <input asp-for="About.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="About.Body">Body:</label>
        <textarea name="About.Body" style="width: 300px; height: 100px;" required
                  id="PassageQuestion2" class="ckeditor" asp-for="About.Body">@Model.About.Body</textarea>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="About.IsActive" checked="@Model.About.IsActive">
            <label class="form-check-label" asp-for="About.IsActive">Is Active</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<script src="//cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('PassageQuestion2');
    });
</script>