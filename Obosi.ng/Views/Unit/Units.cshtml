@using Obosi.ng.Presentation.utility;
@model Obosi.ng.Presentation.ViewModels.UnitViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet">

</head>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>@Model.Unit_Type.Name</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="text-start m-3">
                        <a class="btn btn-outline-primary btn-sm mb-0" href="~/unit/create?unitTypeId=@Model.UnitTypeId">Create</a>
                    </div>
                    <div class="table-responsive p-0">
                        <table id="example" class="table table-striped p-3 m-3" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S/n</th>
                                    <th>Name</th>
                                    <th>Unit Type</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Units != null)
                                {
                                    int k = 1;
                                    @foreach (var item in Model.Units)
                                    {
                                        <tr>
                                            <td>@k</td>
                                            <td>@item.Name</td>
                                            <td>@item.UnitType.Name</td>
                                            <td>
                                                <a class="btn btn-outline-primary btn-sm mb-0" href="~/Unit/Edit?id=@item.Id.ToString()">Edit</a>
                                            </td>
                                        </tr>
                                        k++;
                                    }

                                }



                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script> 