@model Obosi.ng.Presentation.ViewModels.BoulevardViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Boulevard </h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">FullName:</label>
        <input asp-for="builders_Boulevard.FullName" class="form-control" />
    </div>
    

   
    <div class="form-group">
        <label for="content">Description:</label>

        <textarea name="builders_Boulevard.Description" style="width: 300px; height: 100px;" required
                  id="PassageQuestion2" class="ckeditor" asp-for="builders_Boulevard.Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script src="//cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('#PassageQuestion');
        CKEDITOR.replace('#PassageQuestion2');
    });

</script>
