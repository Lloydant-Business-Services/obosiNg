@using Obosi.ng.Presentation.utility;
@model Obosi.ng.Presentation.ViewModels.HomePageViewModel;
@{
    Layout = "~/Views/Shared/_GeneralLayout2.cshtml";
            //Layout = null;
}

<style>

    .container-blog__page {
        display: flex;
        width: 100vw;
        padding: 96px 64px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 40px;
        /* Image */
        background: linear-gradient( 0deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 100% ), url(/Blog\ Hero.png), lightgray 50% / cover no-repeat;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .image {
        height: 353.713px;
        align-self: stretch;
        background: url(/), lightgray 0px -123.664px / 100% 144.75% no-repeat;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .avatarr {
        width: 48px;
        height: 48px;
        background: url(/), lightgray 50% / cover no-repeat;
        background-size: cover;
        border-radius: 100%;
    }

</style>




<!-- Header -->
<div class="container-blog__page">
    <div class="blog-header-container">
        <h2 class="blog-header-text">THE BRIEF HISTORY OF OBOSI PEOPLE</h2>
        <div class="avatar-content">
            
        </div>
    </div>
</div>
<!-- Header End -->

<main class="container-blog">
    <div class="containerr">
        <div class="blog-links">


            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">History</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        THE BRIEF HISTORY OF OBOSI PEOPLE
                    </li>
                </ol>
            </nav>

            <div class="breadcrumb-links">
                <!-- icons go here -->

                <div>
                    <img src="" alt="" />
                </div>
            </div>
        </div>

        <!-- Introduction -->

        <div class="introduction-container">
            <h2>  THE BRIEF HISTORY OF OBOSI PEOPLE</h2>

           
        </div>

        <!-- Content Area -->

        <div style="text-align:justify">
            @foreach (var aboutItem in Model.AboutContent)
            {
                <div>
                   
                    <p>@Html.Raw(@aboutItem.Body)</p>
                </div>
            }

           @*@Html.Raw(Model.AboutContent)*@
         </div>
        @if (Model.PageId > 0)
        {
            int nextPage = Model.PageId + 1;
            int previousPage = Model.PageId - 1;
            <div class="d-flex p-2 gap-1">
                @if (Model.PageId > 1)
                {
                    <div class="">
                        <a class="btn btn-light border border-grey" style="color: rgba(107, 114, 128, 1);" href="~/Home/AboutUs?pageId=@previousPage">Previous</a>
                    </div>
                }
                @if (Model.HasNextPage)
                {
                    <div class="">
                        <a class="btn " style="background-color: rgba(252, 56, 108, 1); color: #fff;" href="~/Home/AboutUs?pageId=@nextPage">Next</a>
                </div>
                }

            </div>
        }

    </div>

</main>

