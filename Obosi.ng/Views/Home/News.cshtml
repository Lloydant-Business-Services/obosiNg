@using Obosi.ng.Presentation.utility;
@model Obosi.ng.Presentation.ViewModels.HomePageViewModel;
@{
    Layout = "~/Views/Shared/_GeneralLayout2.cshtml";
            //Layout = null;
}

<style>

    .container-blog__page {
        display: flex;
        width: 100vw;
        padding: 96px 64px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 40px;
        /* Image */
        background: linear-gradient( 0deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 100% ), url(/Blog\ Hero.png), lightgray 50% / cover no-repeat;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .image {
        height: 353.713px;
        align-self: stretch;
        background: url(/@Model.newsItem.BackgroundImageUrl), lightgray 0px -123.664px / 100% 144.75% no-repeat;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .avatarr {
        width: 48px;
        height: 48px;
        background: url(/@Model.newsItem.User.PassportUrl), lightgray 50% / cover no-repeat;
        background-size: cover;
        border-radius: 100%;
    }
</style>




<!-- Header -->
<div class="container-blog__page">
    <div class="blog-header-container">
        <h2 class="blog-header-text">@Model.newsItem.Title</h2>
        <div class="avatar-content">
            <div class="avatarr"></div>
            <div class="avatar-desc">
                <h5>@Model.newsItem?.User?.LastName @Model?.newsItem?.User?.FirstName</h5>
                <div class="desc">
                    <p>@Model.newsItem.DateApproved.Value.ToShortDateString() • 5 min read</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->

<main class="container-blog">
    <div class="containerr">
        <div class="blog-links">


            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">News</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @Model.newsItem.Title
                    </li>
                </ol>
            </nav>

            <div class="breadcrumb-links">
                <!-- icons go here -->

                <div>
                    <img src="" alt="" />
                </div>
            </div>
        </div>

        <!-- Introduction -->

        <div class="introduction-container">
            <h2>Introduction</h2>

            <div class="reaction-container">
                <label for="thumbs-down-checkbox">
                    <div class="thumb thumbs-down"></div>
                </label>
                <input type="checkbox" id="thumbs-down-checkbox" />

                <label for="thumbs-up-checkbox">
                    <div class="thumb thumbs-up"></div>
                </label>
                <input type="checkbox" id="thumbs-up-checkbox" />
            </div>
        </div>

        <!-- Content Area -->

        <div>
            <p>
                @Html.Raw( @Model.newsItem.Body)
            </p>
        </div>

        <!-- Image -->
        <div class="image-container">
            <div class="image"></div>
            <div class="figure-captioon">
                <div class="rectangle-bar"></div>
                <div><h6>Image caption goes here</h6></div>
            </div>
        </div>
        <!-- Image End-->

        <div>
            <p>

            </p>
        </div>

        <h2 class="Conclusion">Conclusion</h2>
        <p>
            @Html.Raw( @Model.newsItem.Body)
        </p>
