@model Obosi.ng.Presentation.ViewModels.HomePageViewModel;
@{
    //Layout = "~/Views/Shared/_HomeLayout.cshtml";
    Layout = "~/Views/Shared/_GeneralLayout2.cshtml";
}


<style>
    a {
        text-decoration: none;
    }
</style>



<div class="row container" style="margin-left: auto; margin-right: auto;">
    <div class="col-sm-12 ">
        <p style="font-size: 4vmin; font-weight: 700;">CALENDER</p>
    </div>
</div>
<div class="container" style="background-color: #D4D8E2;border-bottom:1px solid #ffff">


    @if (Model.CalenderAssets?.Count() > 0)
    {
        <div class="" style="  ">
            <div class="row">
            @foreach (var cal in Model.CalenderAssets)
            {

                <!-- First Box -->
                <div class=" col-md-4  p-4" >
                    <div class="col-md-12 " style="display: flex; background-color: #F7F7F7; padding: 10px;">
                        <div class="col-md-3" style="line-height: normal; color: #FFFFFF; margin: 0; padding: 10px; background-color: #CFB174;">
                            @{
                                var mon = cal.StartDate.ToString("MMM");
                            }

                            <h6 style="font-weight: 700; font-size: 40px; margin: 0;"> @mon</h6>
                            <h6 style="font-weight: 700; font-size: 65px; margin: 0;"> @cal.StartDate.Day</h6>
                            <h6 style="font-weight: 500; font-size: 28px; margin: 0;">  @cal.StartDate.Year</h6>
                        </div>
                        <div class="col-md-9 " style="padding: 10px;">
                            <h6 style="font-weight: 600; font-size: 30px; margin: 0;color:  #4e4e4e;"> @cal.Title</h6>
                            <div class="py-5"></div>
                            <div class="">
                                <div style="border-bottom: 3px solid #CFB174; padding: 5px;">
                                    @* <a href="~/Home/Events?id=@StringEncryption.Encrypt(@cal.Id.ToString())" class="font-weight-bold">
                                        Learn More
                                    </a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            }</div>
        </div>
    }
    else
    {

        <div style="background-color: #fff;" class="p-3">
            <div style="text-align: center;">
                <img src="~/notFound.gif" alt="Empty Page Image" class="w-10 h-10mb-3" style="width: 100px; height: 100px;">
                <h3>Ooops! This content seems to be empty.</h3>
                <p>No Events Found.</p>

            </div>

        </div>
    }




</div>