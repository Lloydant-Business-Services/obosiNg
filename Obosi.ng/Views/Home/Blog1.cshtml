@using Obosi.ng.Presentation.utility;
@model Obosi.ng.Presentation.ViewModels.HomePageViewModel;
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style>
    p.responsive_font_size {
        font-size: calc(16px + 0.2vw); /* Set a base font size with responsiveness */
    }
</style>



      <div class="heroDiv py-5" style="text-align: center;">
        <p style="font-size: 48px; font-weight: 700; color: #fff;">@Model.blogItem.Title</p>
        <div class="" style=" ">
            <img src="~/@Model.blogItem.User.PassportUrl" alt="" class="img-fluid " style="margin: auto; width: 48px; height: 48px;border-radius: 50%; display: flex; justify-self: center;">
        </div>
        <p style="font-size: 14px; font-weight: 600; color: #fff;">@Model.blogItem?.User?.LastName @Model?.blogItem?.User?.FirstName</p>
        <p style="font-size: 14px; font-weight: 400; color: #fff;">@Model.blogItem.DateApproved.Value.ToShortDateString() <span>&#8226; 5 min read</span></p>
      </div>
      <div style="" class="container py-5">
       <div style="display: flex; justify-content: space-between;">
        <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item" style="font-family: 16px; font-weight: 400;"><a href="index.html">Blog</a></li>
              <li class="breadcrumb-item active" style="color: #0078D4;"> @Model.blogItem.Title</li>
    
            </ol>
        </nav>
        <div style="display: flex; flex-direction: row; gap: 5px;">
            <i class="fas fa-link"> </i>
            <i class="fab fa-linkedin"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-facebook-f"></i>
        </div>

       </div>
       <div class="col-sm-12 mt-4">
        <p class="mt-4 text-left responsive_font_size" style="color: #FB2B5F; font-size: 40px; font-weight: 700;">Introduction</p>
      @Html.Raw( @Model.blogItem.Body)
        
               <div class="mt-4">
            <div>
            <img src="~/@Model.blogItem.BackgroundImageUrl" alt="" class="img-fluid col-sm-12 w-100"
                     style="margin: auto; width: 400px;
height: 400px; " />
            </div>
            <div style="background-color: #fff ; padding: 3vmin;" class="shadow-sm">
                <p class="text-left " style="font-size: 3vmin;">Image Caption</p>
            </div>
           </div>
       </div>
      
        <p class="text-left responsive_font_size mt-4" style="font-size: 32px; font-weight:700; ">Conclusion</p>
    @Html.Raw( @Model.blogItem.Summary)
         <div class="mt-5 mb-5">
        <p class="text-center responsive_font_size mt-4" style="font-size: 48px; font-weight:700; tex">Related posts</p>
        <p class="text-center responsive_font_size mt-4" style="font-size: 16px; font-weight:400; ">You might also like these. </p>
       </div>
       <div class="row mt-5 justify-content-center gap-3">
            @foreach (var item in Model.Blogs)
        {
                <div class="rounded col-md-3 col-12 border border-black" onclick="window.location.href = '/Home/Blog?id=@StringEncryption.Encrypt(@item.Id.ToString())';">
            <div style="background-color: #fff;  padding: 1vmin;" class="shadow-sm">
                <div>
                        <img src="~/@item.BackgroundImageUrl" alt="" class="img-fluid " style="height: 300px; width: 300px;">
                </div>
                <p class="text-left " style="font-size: 24px; font-weight: 700;">@item.Title</p>
               
                <div class="row">
                   <div class="col-sm-3">
                    <img src="~/@item.User.PassportUrl" alt="" class="img-fluid col-md-3" style="margin: auto; width: 48px; 
height: 48px;border-radius: 50%; ">
                   </div>
                   <div style="flex-direction: row;"class="col-sm-6">
                    <p class="text-left " style="font-size: 14px; font-weight: 600;">@item.User.LastName @item.User.FirstName</p>
                    <p class="text-left " style="font-size: 14px; font-weight: 400;">@item.DateApproved.Value.ToShortDateString() <span>&#8226; 5 min read</span></p>
                   </div>
                  
    
                </div>
            </div>
           
        </div>}
      

       </div>
       <div class="d-flex justify-content-center mt-5">
        <a class="btn border border-black bg-white text-center" href="~/Home/BlogList">View all</a>
       </div>
      

      </div>
    

<div class="modal fade" id="accountModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content" style="background-color: #04042F;">
            <div class="modal-header">
                <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
                <button type="button" class="btn-close bg-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body container">
                <div>
                    <div class="row justify-content-between">
                        <div class="col-md-3 col-12">
                            <img src="~/images/obosiLogoText.png" alt="" />
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 " style=" border-bottom: 1px solid #9D9CDB; ">
                            <h1 class="medievalsharp-regular" style="color: #fff; font-size: 40px; font-weight: 500; text-align: center;">Account Manager</h1>
                        </div>
                    </div>
                    <div class="row p-2">
                        <div class="col-md-3 p-3" style="border-right: 1px solid #9D9CDB;">
                            <form class="form-inline" asp-action="SignIn" asp-controller="Home" method="POST">
                                <p style="font-size: 18px; font-weight: 500; color: #FFFFFF;">Enter your email address or phone number to access your dashboard</p>
                                <label for="" style="font-size: 16px; color: #fff; "> Email Address or Phone Number</label>
                                <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"
                                       style="background-color: #100E6C; color: #fff;" required asp-for="Username" />
                                <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Password</label>
                                <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"
                                       style="background-color: #100E6C; color: #ffffff; caret-color: #ffffff; opacity: 0.7;"
                                       required asp-for="Password" />
                                <button class="btn w-100 mt-3 p-2" style="background-color: #FB376B; color: #010119; font-size: 16px; font-weight: 500;">LOGIN</button>
                            </form>

                        </div>
                        <div class="col-md-9 p-3 ">
                            <p style="font-size: 18px; font-weight: 500; color: #FFFFFF; text-align: center;">Are you an Obosi indigene but not registered? Complete the following fields to get started or <span style="color: #0078D4;">verify your account</span></p>

                            <form role="form" class="text-left" asp-action="SignUp" asp-controller="Home">
                                <div class="row p-3">
                                    <div class="col-md-6 col-12">
                                        <div>
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">First Name</label>
                                            <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"
                                                   style="background-color: #100E6C; color: #ffffff; caret-color: #ffffff; opacity: 0.7;"
                                                   required asp-for="user.FirstName" />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div>
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Last Name</label>
                                            <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"
                                                   style="background-color: #100E6C; color: #ffffff; caret-color: #ffffff; opacity: 0.7;"
                                                   required asp-for="user.LastName" />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div>
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Last Name</label>
                                            <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"
                                                   style="background-color: #100E6C; color: #ffffff; caret-color: #ffffff; opacity: 0.7;"
                                                   asp-for="user.OtherName" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div>
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Email</label>
                                            <input class="form-control form-control-lg" type="email" aria-label=".form-control-lg example"
                                                   style="background-color: #100E6C; color: #ffffff; caret-color: #ffffff; opacity: 0.7;"
                                                   asp-for="user.Email" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div>
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Password</label>
                                            <input class="form-control form-control-lg" type="password" aria-label=".form-control-lg example"
                                                   style="background-color: #100E6C; color: #ffffff; caret-color: #ffffff; opacity: 0.7;"
                                                   asp-for="user.Password" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div>
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Phone Number</label>
                                            <input class="form-control form-control-lg" type="tel" aria-label=".form-control-lg example"
                                                   style="background-color: #100E6C; color: #ffffff; caret-color: #ffffff; opacity: 0.7;"
                                                   asp-for="user.PhoneNumber" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="">
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Village</label>
                                            <select class="form-select form-select-lg" aria-label="Default select example" style="background-color: #100E6C;
                                            color: #ffffff;" required asp-for="VillageId">
                                                <option selected>Select Village</option>
                                                @foreach (var vil in Model.AllVillages)
                                                {
                                                    <option value="@vil.Id">@vil.Name</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="">
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Gender</label>
                                            <select class="form-select form-select-lg" aria-label="Default select example" required
                                                    style="background-color: #100E6C; color: #ffffff;" asp-for="user.GenderId">
                                                <option selected>Select Gender</option>
                                                <option value="1">Male</option>
                                                <option value="2">Female</option>

                                            </select>
                                        </div>

                                    </div>

                                    <div class="col-md-6 col-12 ">
                                        <div class="">
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Umunna</label>
                                            <select class="form-select form-select-lg " aria-label="Default select example" required
                                                    style="background-color: #100E6C; color: #ffffff;" asp-for="UmunnaId">
                                                <option selected>Select Umunna</option>
                                                @foreach (var umu in Model.AllUmunna)
                                                {
                                                    <option value="@umu.Id">@umu.Name</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="">
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Ime Nne</label>
                                            <select class="form-select form-select-lg " aria-label="Default select example" required
                                                    style="background-color: #100E6C; color: #ffffff; " asp-for="ImeneId">
                                                <option selected>Select Ime Nne</option>
                                                @foreach (var ime in Model.AllImene)
                                                {
                                                    <option value="@ime.Id">@ime.Name</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="">
                                            <label for="" style="font-size: 16px; color: #fff; " class="mt-2">Aka</label>
                                            <select class="form-select form-select-lg" aria-label="Default select example" required
                                                    style="background-color: #100E6C; color: #ffffff; " asp-for="AkaId">
                                                <option selected>Select Aka</option>
                                                @foreach (var ak in Model.AllAka)
                                                {
                                                    <option value="@ak.Id">@ak.Name</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn w-100 mt-3 p-2" style="background-color: #FB376B; color: #010119; font-size: 16px; font-weight: 500;">CONTINUE</button>

                            </form>
                        </div>


                    </div>
                </div>


            </div>
        </div>

    </div>
</div>

