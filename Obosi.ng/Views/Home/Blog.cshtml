@model Obosi.ng.Presentation.ViewModels.HomePageViewModel;
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="heroDiv py-5" style="text-align: center;">
    <p style="font-size: 48px; font-weight: 700; color: #fff;">@Model.blogItem.Title</p>
    <div class="" style=" ">
        <img src="" alt="" class="img-fluid " style="margin: auto; width: 48px; height: 48px;border-radius: 50%; display: flex; justify-self: center;">
    </div>
    <p style="font-size: 14px; font-weight: 600; color: #fff;">@Model.blogItem?.User?.LastName @Model?.blogItem?.User?.FirstName </p>
    <p style="font-size: 14px; font-weight: 400; color: #fff;">11 Jan 2024 <span>&#8226; 5 min read</span></p>
</div>
<div style="" class="container py-5">
    <div style="display: flex; justify-content: space-between;">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item" style="font-family: 16px; font-weight: 400;"><a href="index.html">News</a></li>
                <li class="breadcrumb-item active" style="color: #0078D4;">@Model.blogItem.Title</li>

            </ol>
        </nav>
        <div style="display: flex; flex-direction: row; gap: 5px;">
            <i class="fas fa-link"> </i>
            <i class="fab fa-linkedin"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-facebook-f"></i>
        </div>

    </div>
    <div class="col-sm-12 mt-4">
        <p class="mt-4 text-left responsive_font_size" style="color: #FB2B5F; font-size: 40px; font-weight: 700;">Introduction</p>
        <div class="mt-4">
            <div>
                <img src="~/@Model.blogItem.BackgroundImageUrl" alt="" class="img-fluid col-sm-12 w-100 h-50" />
            </div>
            <div style="background-color: #fff ; padding: 3vmin;" class="shadow-sm">
                <p class="text-left " style="font-size: 3vmin;">Image Caption</p>
            </div>
        </div>
    </div>
    <pre class="text-left responsive_font_size mt-4" style="font-size: 20px; font-weight: 700; ">@Html.Raw(Model.blogItem.Body)</pre>

    <p class="text-left responsive_font_size mt-4" style="font-size: 32px; font-weight:700; ">Summary</p>
    <pre class="text-left responsive_font_size mt-4" style="font-size: 16px; font-weight:400; "> @Html.Raw(Model.blogItem.Summary)</pre>
    <div class="mt-5 mb-5">
        <p class="text-center responsive_font_size mt-4" style="font-size: 48px; font-weight:700; tex">Related posts</p>

    </div>
    <div class="row mt-5 justify-content-center gap-3">
        @foreach (var item in Model.Blogs)
        {
            <div class="rounded col-md-3 col-12 border border-black">
                <div style="background-color: #fff;  padding: 1vmin;" class="shadow-sm">
                    <div>
                        <img src="~/@item.BackgroundImageUrl" alt="" class="img-fluid w-100 h-50">
                    </div>
                    <p class="text-left " style="font-size: 24px; font-weight: 700;">@item.Title</p>
                    <p class="text-left " style="font-size: 16px; font-weight: 400;">...</p>
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="~/@item?.User?.PassportUrl" alt="" class="img-fluid col-md-3" style="margin: auto; width: 48px; height: 48px;border-radius: 50%; ">
                        </div>
                        <div style="flex-direction: row;" class="col-sm-6">
                            <p class="text-left " style="font-size: 14px; font-weight: 600;">@item?.User?.LastName @item?.User?.FirstName</p>
                            <p class="text-left " style="font-size: 14px; font-weight: 400;">@item?.DateApproved.Value.ToShortDateString() <span>&#8226; 5 min read</span></p>
                        </div>


                    </div>
                </div>

            </div>

        }
    </div>
    <div class="d-flex justify-content-center mt-5">
        <button class="btn border border-black bg-white text-center">View all</button>
    </div>


</div>



