<div class="container-blog__page">
    <div class="blog-header-container">
        <h2 class="blog-header-text">Blog List</h2>

    </div>
</div>


<div class="related-post">
    <div class="related-post__header">
        <h2>Welcome to Obosi Blog</h2>
    </div>

    <p>Emerging Stories and Blogs.</p>

    <!-- Cards -->

    <div class="posts">


        @if (Model.Blogs?.Count()>0)
        {
            foreach (var item in Model.Blogs)
            {

                <!-- Post 1 -->
                <div class="card" onclick="window.location.href = '/Home/Blog?id=@StringEncryption.Encrypt(@item.Id.ToString())';">
                    <img src="~/@item.BackgroundImageUrl" alt="Blog Post Image" class="card-img">
                    <div class="card-content">
                        <h2 class="card-title">@item.Title</h2>
                        <p class="card-description">Brief description of the blog post content...</p>
                        <div class="author-info">
                            <img src="~/@item.User.PassportUrl" alt="Author Avatar" class="author-avatar">
                            <p class="author-name">@item.DateApproved.Value.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
            }

        }

        else
        {
            <div style="background-color: #fff;" class="p-3">
                <div style="text-align: center;">
                    <img src="~/notFound.gif" alt="Empty Page Image" class="w-10 h-10mb-3" style="width: 100px; height: 100px;">
                    <h3>Ooops! This page seems to be empty.</h3>
                    <p>Return to the homepage to discover more content.</p>
                    <a href="/" class="btn btn-danger">Return to Homepage</a>
                </div>

            </div>
        }
        <!-- Post 1 end-->
