<!-- Right Container -->
<div class="profileRightWrapper col-sm-12">
    <div class="InnerWrapper">
        <div class="header">
            <p class="headerParagraph">Update Your Profile</p>

            <div class=" button-screen ">
                <button class="primaryButton"></button>
                <button class="primaryButton">New Topic</button>
                <button class="primaryButton">New Topic</button>
                <button class="primaryButton">Update Profile</button>

            </div>
        </div>
    </div>

    <div class="imageBannerSection">
        <div class="imageBannerInnerContainer">
            @if (string.IsNullOrWhiteSpace(Model.User.BackGroundImageUrl))
            {
                <img src="~/uc/images/mathias-reding-gZZ8_YlonXw-unsplash.jpg">
            }
            else
            {
                <img src="/@Model.User.BackGroundImageUrl"
                     alt="hero image" />
            }
        </div>
    </div>

    <div class="profileHeader">
        <div class="profileHeaderWrapper">
            <div class="userImageContainer">
                @if (string.IsNullOrWhiteSpace(Model.User.PassportUrl))
                {
                    <img src="/images.jpg" alt="Profile Image">
                }
                else
                {
                    <img src="/@Model.User.PassportUrl" alt="" />
                }
            </div>

            <div class="obosiUserProfile">
                <h2 class="mainHeroText">@Model.User.FirstName @Model.User.OtherName @Model.User.LastName</h2>
                <div class="userId">
                    <span>@Model.Village</span> <span class="heroItemDivide"></span>
                    <span>@Model.Aka</span> <span class="heroItemDivide"></span>
                    <span>@Model.Umunna</span> <span class="heroItemDivide"></span>
                    <span>@Model.Imenne</span>
                </div>
                <p class="userTitle">@Model.User.Title</p>
            </div>

            <section class="userProfileContent">
                <h2 class="aboutUsHeader">About Us</h2>
                <p>
                    @Html.Raw( @Model.User.AboutMe)
                </p>

            </section>
        </div>
    </div>
</div>