@model Obosi.ng.Presentation.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet">

</head>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Approve Users</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    @*  <div class="text-start m-3">
                    <button class="btn btn-outline-primary btn-sm mb-0">Create</button>
                    </div> *@
                    <div class="table-responsive p-0">
                        <table id="example" class="table table-striped p-3 m-3" style="width:100%">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>Email</th>
                                    <th>PhoneNumber</th>
                                  
                                    <th>Umunna</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Members != null)
                                {
                                    int k = 1;
                                    foreach (var item in Model.Members)
                                    {
                                        <tr>
                                            <td>@item.Users.LastName @item.Users.FirstName @item.Users.OtherName</td>
                                            <td>@item.Users.Email</td>
                                            <td>@item.Users.PhoneNumber</td>
                                            <td>@item?.Unit?.Name</td>
                                            <td>   <a class="btn btn-outline-primary btn-sm mb-0" href="~/User/ApproveUsers?username=@item.Users.Email&&unitId=@item.UnitId ">Approve</a></td>

                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script> 