@model Obosi.ng.Presentation.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_UserAdminLayout.cshtml";
}

<h1>Update My Profile</h1>

<div class="profile-image-container" style="align-content:end">
    @if (string.IsNullOrWhiteSpace(Model.User.PassportUrl))
    {
        <img src="/images.jpg" alt="Profile Image" style="border-radius: 50%;"
             class="profile-image rounded-full border-2 border-gray-200 shadow-md">
    }
    else
    {
        <img src="/@Model.User.PassportUrl" alt="Profile Image" style="border-radius: 50%;margin: auto; width: 98px; height: 98px;"
             class="profile-image rounded-full border-2 border-gray-200 shadow-md">
    }
</div>
<form asp-action="EditUserProfile" method="post" enctype="multipart/form-data">

    <input asp-for="User.Id" type="hidden" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Lastname:</label>
                <input asp-for="User.LastName" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Firstname:</label>
                <input asp-for="User.FirstName" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Othername:</label>
                <input asp-for="User.OtherName" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">Email:</label>
                <input asp-for="User.Email" class="form-control" disabled/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Phone No:</label>
                <input asp-for="User.PhoneNumber" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Maiden Name:</label>
                <input asp-for="User.MaidenName" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Title or Salutation:</label>
                <input asp-for="User.Title" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">

            <div class="form-group">
                <label for="BackgroundImageUrl">Profile Picture:</label>
                <input asp-for="Image" class="form-control" type="file" />
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label for="BackgroundImageUrl">Background Picture:</label>
                <input asp-for="BackgroundImage" class="form-control" type="file" />
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CategoryId">Password:</label>
                <input asp-for="User.Password" class="form-control" type="password" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label for="CategoryId">About Me:</label>

                <textarea name="User.AboutMe" style="width: 100%; height: 100px;" required
                          id="PassageQuestion" class="ckeditor"
                          asp-for="User.AboutMe"></textarea>
            </div>
        </div>

    </div>


    <button type="submit" class="btn btn-primary">Save</button>
</form>

<script src="//cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('#PassageQuestion');
    });

</script>

